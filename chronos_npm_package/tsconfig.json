{
  "compilerOptions": {
    /* Language / Emit Targets */
    "target": "ES2020",

    /* Strictness / Type Checking */
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    /* Module System Setup */
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "esModuleInterop": true,
    /* Other Options */
    "jsx": "react",
    "allowJs": true,
    "checkJs": false
  },

  "include": ["**/*.ts"],

  "exclude": ["node_modules"]
}

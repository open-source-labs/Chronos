{
  "compilerOptions": {
    /* Language / Emit Targets */
    "target": "ES2020",
    
    /* Strictness / Type Checking */
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": false, // You have this disabled, you can tighten it later if you want
    "skipLibCheck": true,
    
    /* Paths & Outputs */
   /* "outDir": "./build",*/
    "sourceMap": true,
    "noEmitOnError": false,

    /* Module System Setup */
    "module": "NodeNext",
    "moduleResolution": "nodenext",
 "rootDir": ".",
"outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Other Options */
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,

    /* Type Declarations to Include */
    "types": ["jest", "node"]
  },

  "include": [
  
    // "controllers/**/*.ts",
   
    // "server/**/*.ts",
    
    // "models/**/*.ts",
   
    "**/*.ts"
  ],

  "exclude": [
    "node_modules"
    /* "dist","build"*/
  ]
}
